<Window x:Class="FUMiniHotel_ProjectPRN212.Service.EditServiceDialog"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="Chỉnh Sửa Dịch Vụ" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border CornerRadius="10" BorderThickness="1" >
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <fa:IconImage Icon="Edit" 
                             Foreground="{StaticResource titleColor2}"
                             Width="24" Height="24"
                             Margin="0,0,10,0"/>
                <TextBlock Text="CHỈNH SỬA DỊCH VỤ"
                           Foreground="{StaticResource titleColor2}"
                           FontSize="18"
                           FontFamily="Montserrat"
                           FontWeight="Bold"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Mã dịch vụ:" 
                           Foreground="{StaticResource plainTextColor3}"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtServiceId" 
                         IsReadOnly="True"
                        />

                <TextBlock Text="Tên dịch vụ:" 
                           Foreground="{StaticResource plainTextColor3}"
                           Margin="0,10,0,5"/>
                <TextBox x:Name="txtServiceName" 
                        />

                <TextBlock Text="Mô tả:" 
                           Foreground="{StaticResource plainTextColor3}"
                           Margin="0,10,0,5"/>
                <TextBox x:Name="txtDescription" 
                        
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>

                <TextBlock Text="Giá (VND):" 
                           Foreground="{StaticResource plainTextColor3}"
                           Margin="0,10,0,5"/>
                <TextBox x:Name="txtPrice" 
                        />
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hủy" 
                       
                        Width="100"
                        Click="BtnCancel_Click"/>
                <Button Content="Cập nhật" 
                       
                        Width="100"
                        Margin="10,0,0,0"
                        Click="BtnUpdate_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>